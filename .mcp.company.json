{
	"mcpServers": {
		"gitlab": {
			"command": "npx",
			"args": ["-y", "@zereight/mcp-gitlab"],
			"env": {
				"GITLAB_PERSONAL_ACCESS_TOKEN": "${GITLAB_PERSONAL_ACCESS_TOKEN}",
				"GITLAB_API_URL": "${GITLAB_API_URL}",
				"GITLAB_READ_ONLY_MODE": "false",
				"USE_GITLAB_WIKI": "false",
				"USE_MILESTONE": "false",
				"USE_PIPELINE": "false"
			}
		},
		"jira": {
			"command": "npx",
			"args": [
				"mcp-remote",
				"${JIRA_MCP_URL}",
				"--allow-http",
				"--header",
				"x-confluence-jira-username:${JIRA_USERNAME}",
				"--header",
				"x-confluence-jira-token:${JIRA_API_KEY}"
			],
			"env": {
				"JIRA_MCP_URL": "${JIRA_MCP_URL}",
				"JIRA_USERNAME": "${JIRA_USERNAME}",
				"JIRA_API_KEY": "${JIRA_API_KEY}"
			}
		},
		"confluence": {
			"command": "npx",
			"args": [
				"mcp-remote",
				"${CONFLUENCE_MCP_URL}",
				"--allow-http",
				"--header",
				"x-confluence-wiki-username:${CONFLUENCE_USERNAME}",
				"--header",
				"x-confluence-wiki-token:${CONFLUENCE_API_KEY}"
			],
			"env": {
				"CONFLUENCE_MCP_URL": "${CONFLUENCE_MCP_URL}",
				"CONFLUENCE_USERNAME": "${CONFLUENCE_USERNAME}",
				"CONFLUENCE_API_KEY": "${CONFLUENCE_API_KEY}"
			}
		},
		"figma": {
			"type": "sse",
			"url": "http://127.0.0.1:3845/sse"
		}
	}
}
