{
	"mcpServers": {
		"filesystem": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-filesystem",
				"/Users/${USER}"
			],
			"env": {
				"USER": "${USER}"
			}
		},
		"deepwiki": {
			"type": "sse",
			"url": "https://mcp.deepwiki.com/sse"
		},
		"github": {
			"type": "http",
			"url": "https://api.githubcopilot.com/mcp",
			"headers": {
				"Authorization": "Bearer ${GITHUB_COPILOT_API_KEY}"
			},
			"env": {
				"GITHUB_COPILOT_API_KEY": "${GITHUB_COPILOT_API_KEY}"
			}
		},
		"chrome-devtools": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "chrome-devtools-mcp@latest"],
			"env": {}
		},
		"tavily": {
			"command": "npx",
			"args": [
				"-y",
				"mcp-remote",
				"https://mcp.tavily.com/mcp/?tavilyApiKey=${TAVILY_API_KEY}"
			],
			"env": {
				"TAVILY_API_KEY": "${TAVILY_API_KEY}"
			}
		},
		"playwright": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "@playwright/mcp@latest"],
			"env": {}
		},
		"serena": {
			"type": "stdio",
			"command": "uvx",
			"args": [
				"--from",
				"git+https://github.com/oraios/serena",
				"serena",
				"start-mcp-server",
				"--context",
				"ide-assistant"
			],
			"env": {}
		},
		"morphllm-fast-apply": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "@morph-llm/morph-fast-apply"],
			"env": {}
		},
		"magic": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "@21st-dev/magic"],
			"env": {}
		},
		"sequential-thinking": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
			"env": {}
		},
		"context7": {
			"type": "stdio",
			"command": "npx",
			"args": ["-y", "@upstash/context7-mcp"],
			"env": {}
		}
	}
}
