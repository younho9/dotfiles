# Machine-local 1Password configuration
# Copy this file to ~/.config/op/op.env and edit for your machine.
# Then create symlink: ln -s ~/.config/op/op.env ~/.env

# Service Account token (omit if not using SA)
export OP_SERVICE_ACCOUNT_TOKEN="$(op read op://Personal/<SA_TOKEN_ITEM>/credential)"

# Account-specific env file for `opr` (op run)
export OP_ENV_FILE="$HOME/.config/op/<account>.env"
